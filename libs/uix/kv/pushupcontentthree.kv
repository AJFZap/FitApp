<PushUpContentThree>:
    name: 'Kneeling Pushups'

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: "#1E1E15"
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: "images/Exercise_BG2.png"

        MDTopAppBar:
            id: exercise
            title: ""
            left_action_items: [["arrow-left", lambda x: app.root.set_current('pushup')]]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            height: root.height
            width: root.width
            effect_cls: 'ScrollEffect'

            MDGridLayout:
                id: pullup_container
                cols: 1
                padding: 20
                spacing: 20
                adaptive_height: True
                row_default_height: 25

                MDLabel:
                    size: self.texture_size
                    font_size: 40
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Performance"
                
                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: 40
                    font_name: "fonts/Eurostile.ttf"
                    text: "Kneel on the floor with your feet together, and your palms flat on the ground in front of you. The arms should be straight, shoulder width apart, and in line with your chest. Link one ankle around the other, and keep the hips straight and in alignment with the trunk and head. This is the start position (fig. 5). Using the knees as a pivot, bend at the shoulders and elbows until your chest is approximately one fist's width from the floor (fig. 6). Pause and press back to the start position, then repeat."

                MDLabel:
                    size: self.texture_size
                    font_size: 40
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Training Goals"

                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: 40
                    font_name: "fonts/Eurostile.ttf"
                    text: "• Beginner standard:  1 set of 10\n• intermediate standard:  2 sets of 15\n• Progression standard:  3 sets of 30"
                
                Image:
                    size_hint_y: None
                    height: 400
                    source: "images/pushimags/pushup 3 fig 1.png"
                
                Image:
                    size_hint_y: None
                    height: 400
                    source: "images/pushimags/pushup 3 fig 2.png"

