#:kivy 2.2.1

<PushUpContentOne>:
    name: 'Wall Pushups'

    MDBoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: "images/Exercise_BG2.png"
        
        MDTopAppBar:
            id: exercise
            title: ""
            left_action_items: [["arrow-left", lambda x: app.root.set_current('pushup')]]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'

            MDGridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(20)
                adaptive_height: True
                row_default_height: dp(25)
                textSize: app.root.get_screen('main').ids.bottom_nav.textSize
                imageSize: app.root.get_screen('main').ids.bottom_nav.imageSize
                    
                MDLabel:
                    size: self.texture_size
                    font_size: self.parent.textSize
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Performance"
                
                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.textSize
                    font_name: "fonts/Eurostile.ttf"
                    text: "Face a wall. With your feet together, place your palms flat against the wall. This is the start position (fig. 1). Your arms should be straight and shoulder width apart, with the hands at chest level. Bend the shoulders and elbows until the forehead gently touches the wall. This is the finish position (fig. 2). Press back to the start position and repeat."

                MDLabel:
                    size: self.texture_size
                    font_size: self.parent.textSize
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Training Goals"

                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.textSize
                    font_name: "fonts/Eurostile.ttf"
                    text: "• Beginner standard:  1 set of 10\n• intermediate standard:  2 sets of 25\n• Progression standard:  3 sets of 50"
                
                Image:
                    size_hint_y: None
                    height: self.parent.imageSize
                    source: "images/pushimags/pushup 1 fig 1.png"
                
                Image:
                    size_hint_y: None
                    height: self.parent.imageSize
                    source: "images/pushimags/pushup 1 fig 2.png"

