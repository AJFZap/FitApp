<HandStand>:
    name: 'handstand'

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: "#1E1E15"
        height: self.minimum_height
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: "images/exercise_BG.png"

        MDTopAppBar:
            title: "Handstand"
            left_action_items: [["arrow-left", lambda x: app.root.set_current('main')]]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'

            MDGridLayout:
                id: handstand_container
                cols: 1
                size_hint: 1, None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)
