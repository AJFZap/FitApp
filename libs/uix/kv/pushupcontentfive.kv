#:kivy 2.2.1

<PushUpContentFive>:
    name: 'Full Pushups'

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: "#1E1E15"
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: "images/Exercise_BG2.png"

        MDTopAppBar:
            id: exercise
            title: ""
            left_action_items: [["arrow-left", lambda x: app.root.set_current('pushup')]]

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'ScrollEffect'

            MDGridLayout:
                cols: 1
                padding: dp(20)
                spacing: dp(20)
                adaptive_height: True
                row_default_height: dp(25)
                textSize: app.root.get_screen('main').ids.bottom_nav.textSize
                imageSize: app.root.get_screen('main').ids.bottom_nav.imageSize
                    
                MDLabel:
                    size: self.texture_size
                    font_size: self.parent.textSize
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Performance"
                
                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.textSize
                    font_name: "fonts/Eurostile.ttf"
                    text: "From the kneeling position, place your palms on the floor and stretch your legs out behind you. Keep your thighs and feet together, and ensure that the hands are below your upper chest and shoulder width apart. Straighten the arms. The hips and spine should be in line. This is the start position (fig 9). Bend at the elbows and shoulders until your breastbone comes to within a fist's width from the floor. In prison pushup competitions, a 'counter' clenches his fist pinky side down on the floor, and counts out when the athlete's chest touches the knuckle of his thumb. If you're training alone and you wish to keep to the right depth, place a baseball or tennis ball directly below your chest (fig. 10). As your chest kisses the ball, pause and push up."

                MDLabel:
                    size: self.texture_size
                    font_size: self.parent.textSize
                    halign: 'center'
                    font_name: "fonts/Sackers-Gothic-Std-Light.ttf"
                    underline: True
                    bold: True
                    text: "Training Goals"

                MDLabel:
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.textSize
                    font_name: "fonts/Eurostile.ttf"
                    text: "• Beginner standard:  1 set of 5\n• intermediate standard:  2 sets of 10\n• Progression standard:  2 sets of 20"
                
                Image:
                    size_hint_y: None
                    height: self.parent.imageSize
                    source: "images/pushimags/pushup 5 fig 1.png"
                
                Image:
                    size_hint_y: None
                    height: self.parent.imageSize
                    source: "images/pushimags/pushup 5 fig 2.png"

